@model GrygierSite.ViewModels.ProductFormViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Add new product</h2>

@using (Html.BeginForm("Create", "Admin", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    <p class="alert alert-info">All fields are required</p>
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(p => p.Name)
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control", autofocus = "autofocus", placeholder = "Fantasy backgrounds" })
        @Html.ValidationMessageFor(p => p.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Description)
        @Html.TextAreaFor(p => p.Description, new { @class = "form-control", placeholder = "The package contains 4 backgrounds in fantasa theme... " })
        @Html.ValidationMessageFor(p => p.Description)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Category)
        @Html.DropDownListFor(p => p.Category, new SelectList(Model.Categories, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Category)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Thumbnail)
        <input type="file" name="Thumbnail" id="Thumbnail" value="Browse"/>
        @Html.ValidationMessageFor(p => p.Thumbnail)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.MarketUrl)
        @Html.TextBoxFor(p => p.MarketUrl, new { @class = "form-control", placeholder = "https://graphicriver.net/..." })
        @Html.ValidationMessageFor(p => p.MarketUrl)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Price)
        @Html.TextBoxFor(p => p.Price, new { @class = "form-control", placeholder = "0.00" })
        @Html.ValidationMessageFor(p => p.Price)
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
