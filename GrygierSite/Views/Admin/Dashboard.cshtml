@model List<GrygierSite.Models.Product>

@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>

<table id="products" class="table table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>Thumbnail</th>
            <th>Id</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
                var table = $("#products").DataTable({
                    ajax: {
                        url: "/api/products",
                        dataSrc: ""
                    },
                    columns: [
                    {
                        data: "thumbnailPath",
                        orderable: false,
                        render: function(data) {
                            return "<img src='/" + data + "' class='img-responsive'/>";
                        }
                    },
                    {
                        data: "id"
                    },
                    {
                        data: "name"
                    },
                    {
                        data: "category.name"
                    },
                    {
                        data: "price"
                        //render: function(data, type, product) {
                        //    return "<img src='" + product.thumbnailPath + "'/>";
                        //}
                    },
                    {
                        data: "id",
                        orderable: false,
                        render: function(data) {
                            return "<button class='btn-link js-delete' data-customer-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });
        });
    </script>
}