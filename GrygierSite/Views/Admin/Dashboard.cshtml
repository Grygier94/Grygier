@model List<GrygierSite.Core.Models.Product>

@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>

<table id="products" class="table table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>Thumbnail</th>
            <th>Id</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            ProductService.renderProductsTable();
            ProductsController.init();
        });    
    </script>
}