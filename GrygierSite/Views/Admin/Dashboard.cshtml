@model List<GrygierSite.Models.Product>

@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>

<table id="products" class="table table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>Thumbnail</th>
            <th>Id</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#products").DataTable({
                ajax: {
                    url: "/api/products",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "thumbnailPath",
                        orderable: false,
                        render: function (data) {
                            return "<img src='/" + data + "' class='img-responsive'/>";
                        }
                    },
                    {
                        data: "id"
                    },
                    {
                        data: "name"
                    },
                    {
                        data: "category.name"
                    },
                    {
                        data: "price"
                        //render: function(data, type, product) {
                        //    return "<img src='" + product.thumbnailPath + "'/>";
                        //}
                    },
                    {
                        data: "id",
                        orderable: false,
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-product-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#products").on("click", ".js-delete",
                function () {
                    var link = $(this);

                bootbox.confirm({
                    title: "Delete",
                    message: "Are you sure you want to delete the product?",
                    buttons: {
                        confirm: {
                            label: 'Delete',
                            className: 'btn-danger'
                        },
                        cancel: {
                            label: 'Cancel',
                            className: 'btn-default'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.ajax({
                                url: "/api/products/" + link.attr("data-product-id"),
                                method: "DELETE"
                            })
                        .done(function () {
                            toastr.success("Product successfully deleted.");
                                    link.parents("tr").fadeOut(function() {
                                        (this).remove();
                                    });
                                })
                        .fail(function () {
                            toastr.error("Something unexpected happend.");

                        });
                        }

                    }
                });
            });
        });
    </script>
}