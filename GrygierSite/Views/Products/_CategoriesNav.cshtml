@using GrygierSite.Core.Models
@model System.Collections.Generic.IEnumerable<GrygierSite.Core.Models.Category>

<ul class="nav navbar-nav navbar-right category">
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Category<span class="caret"></span></a>
        <ul class="dropdown-menu">
            @foreach (var category in Model)
            {
                <li>@Html.ActionLink(category.Name, "GetProducts", "Products", new { category = (Categories)category.Id }, null)</li>
            }
        </ul>
    </li>
</ul>